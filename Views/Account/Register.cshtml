@model RegisterViewModel
@{
    ViewData["Title"] = "S'inscrire";
}

<div class="uk-container uk-margin-top uk-margin-bottom">
    <h2>@ViewData["Title"]</h2>
    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="uk-form-stacked">
        <h4>Crée un compte.</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group uk-margin">
            <label asp-for="Email" class="uk-form-label"></label>
            <div class="uk-form-controls">
                <input asp-for="Email" class="uk-input" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group uk-margin">
            <label asp-for="Password" class="uk-form-label"></label>
            <div class="uk-form-controls">
                <input asp-for="Password" class="uk-input" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group uk-margin">
            <label asp-for="ConfirmPassword" class="uk-form-label"></label>
            <div class="uk-form-controls">
                <input asp-for="ConfirmPassword" class="uk-input" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group uk-margin">
            <button type="submit" class="uk-button">Register</button>
        </div>
        <div class="form-group uk-margin">
            <p>
                <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Se connecter</a>
            </p>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
