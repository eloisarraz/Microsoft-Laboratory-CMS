@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Connexion";
}

<div class="uk-container uk-margin-top uk-margin-bottom">
    <h2>@ViewData["Title"]</h2>
    <div class="uk-column-1-2@m">
        <div class="uk-inline uk-width-1-1@s">
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="uk-form-stacked">
                <h4>Se connecter</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group uk-margin">
                    <label asp-for="Email" class="uk-form-label"></label>
                    <div class="uk-form-controls">
                        <input asp-for="Email" class="uk-input" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group uk-margin">
                    <label asp-for="Password" class="uk-form-label"></label>
                    <div class="uk-form-controls">
                        <input asp-for="Password" class="uk-input" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group uk-margin">
                    <div class="checkbox">
                        <label asp-for="RememberMe" class="uk-form-label">
                            <input asp-for="RememberMe" class="uk-checkbox" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group uk-margin">
                    <button type="submit" class="uk-button">Connexion</button>
                </div>
                <div class="form-group uk-margin">
                    <p>
                        <a asp-action="ForgotPassword">Mot de passe oublier ?</a>
                        <br />
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">S'inscrire</a>
                    </p>
                </div>
            </form>
        </div>
        <div class="uk-inline uk-section uk-section-primary uk-light uk-padding">
            <h4>&Eacute;tudiants SUPINFO ?</h4>
            <hr />
            <p>
                Les étudiants peuvent relier le compte du laboratoire à leur compte ID Booster SUPINFO.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
