@using Microsoft.AspNetCore.Identity
@using MicrosoftLaboratoryCms.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
        <ul class="uk-navbar-nav">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@UserManager.GetUserName(User)</a>
                <div class="uk-navbar-dropdown" uk-dropdown="offset: 0;animation: uk-animation-slide-hrefp-small; duration: 200">
                    <ul class="uk-nav uk-navbar-dropdown-nav">
                        <li class="uk-nav-header">Compte</li>
                        @if(User.IsInRole("administrator"))
                        {
                        <li>
                            <a href="@Url.Action("Index", "Admin")">Administrator</a>
                        </li>
                        }
                        <li>
                            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                                <button type="submit" class="uk-button uk-button-text" style="text-transform: none">D&eacute;connexion</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </li>
        </ul>
}
else
{
    <ul class="uk-navbar-nav">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Inscription</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Connexion</a></li>
    </ul>
}
